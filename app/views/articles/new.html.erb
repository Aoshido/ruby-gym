<!-- Page Wrapper -->
<div id="wrapper">

    <%= render 'layouts/sidebar' %>
    <%= yield %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <%= render 'layouts/topbar' %>
            <%= yield %>

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <h1>New Article</h1>
                <%= render "form", article: @article %>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

    </div>
    <!-- End of Content Wrapper -->

</div>