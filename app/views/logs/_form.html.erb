<%= form_with model: log do |form| %>
  <div class="form-group row gx-1">
    <div class="col-6">
      <!-- :placeholder => form.label por que no puedo hacer esto? form.label me dispara un campo cno tags entero pero deberia haber un tipo form.lable.text -->
      <%= form.text_field :title , :class => 'form-control form-control-user', :placeholder => 'Exercise' %>
      <% log.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="col-4">
      <%= form.text_field :repetitions , :class => 'form-control form-control-user', :placeholder => 'Reps' %>
      <% log.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="col-2">
      <%= form.text_field :weight , :class => 'form-control form-control-user', :placeholder => 'Weight' %>
      <% log.errors.full_messages_for(:weight).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= form.submit class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
